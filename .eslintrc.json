{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "no-shadow": "off",
    "no-restricted-globals": "off",
    "max-len": "off",
    "no-unused-vars": "off",
    "no-alert": "off",
    "no-use-before-define": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "no-plusplus": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}